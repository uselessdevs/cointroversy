{
  "angularCompilerOptions": {
    "entryModule": "app/app.module#AppModule",
    "outDir": "./ngfactory"
  },
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "importHelpers": true,
    "noStrictGenericChecks": true,
    "lib": ["es2016", "dom"],
    "types": ["node"],
    "typeRoots": [
      "node_modules"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "outDir": "lib",
    "rootDir": ".",
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts"
  ]
}
